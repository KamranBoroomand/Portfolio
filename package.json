{
  "name": "kamran-portfolio",
  "private": true,
  "scripts": {
    "build": "npm run build:effects",
    "build:effects": "esbuild src/react/effects-entry.tsx --bundle --format=iife --target=es2018 --outfile=assets/js/effects.bundle.js",
    "watch:effects": "esbuild src/react/effects-entry.tsx --bundle --format=iife --target=es2018 --sourcemap --outfile=assets/js/effects.bundle.js --watch",
    "serve": "http-server . -a 127.0.0.1 -p 4173 -c-1",
    "serve:test": "http-server . -a 127.0.0.1 -p 4173 -c-1 --silent",
    "dev": "concurrently -k -n WATCH,SERVE -c yellow,cyan \"npm:watch:effects\" \"npm:serve\"",
    "lint": "eslint assets/js/**/*.js scripts/**/*.mjs tests/e2e/**/*.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "playwright test",
    "check": "npm run build && npm run lint && npm run format:check && npm run test:e2e",
    "optimize:images": "node scripts/optimize-images.mjs"
  },
  "dependencies": {
    "motion": "^12.23.24",
    "ogl": "^1.0.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "http-server": "^14.1.1",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5"
  }
}
